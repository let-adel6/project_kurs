<%= form_with(model: article) do |form| %>
  <div class="mb-3">
    <%= form.label :title, class: 'form-label' %>
    <%= form.text_field :title, placeholder: 'Title', class: 'form-control' %>
    <% article.errors.full_messages_for(:title).each do |message| %>
      <div class="text-danger"><%= message %></div>
    <% end %>
  </div>

  <div class="mb-3">
    <%= form.label :body, class: 'form-label' %>
    <%= form.text_area :body, class: 'form-control', rows: 5 %>
    <% article.errors.full_messages_for(:body).each do |message| %>
      <div class="text-danger"><%= message %></div>
    <% end %>
  </div>

  <div class="mb-3">
  <%= form.label :category_ids, class: 'form-label' %>
  <%= form.collection_select :category_ids, Category.all, :id, :name, { prompt: 'Select a category' }, multiple: true, class: 'form-select' %>
  <% article.errors.full_messages_for(:category_ids).each do |message| %>
    <div class="text-danger"><%= message %></div>
  <% end %>
  </div>

  
  <div class="mb-3">
    <%= form.submit 'Сохранить', class: 'btn btn-primary' %>
  </div>
<% end %>